<main class="max-w-4xl mx-auto px-4">
    <h2 class="text-2xl font-bold mb-6 text-center text-gray-800">
        Resultado del análisis
    </h2>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-8 items-start">
        <!-- Imagen seleccionada -->
        <div
            class="flex flex-col items-center bg-gray-100 p-6 rounded-lg shadow-md min-w-full max-w-full min-h-50 max-h-50"
        >
            <h3 class="text-lg font-semibold mb-4">Imagen seleccionada</h3>
            <img
                id="selectedImage"
                src=""
                alt="Imagen seleccionada"
                class="max-w-30 max-h-30 object-contain rounded hidden"
            />
            <p class="mt-1 text-gray-500 text-md" id="imagePlaceholder">
                No se ha seleccionado una imagen.
            </p>
        </div>

        <!-- Resultado -->
        <div
            class="flex flex-col items-center bg-white p-6 rounded-lg shadow-md border min-w-full max-w-full min-h-50 max-h-50"
        >
            <h3 class="text-lg font-semibold mb-4">Diagnóstico</h3>

            <p id="resultText" class="text-xl text-gray-700 text-center">
                Aún no se ha procesado ninguna imagen.
            </p>
        </div>
    </div>
</main>
